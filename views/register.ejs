<%- include('header') %>

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

<style>
    /* --- PAGE LAYOUT --- */
    body {
        background-color: #f3f4f6;
        font-family: 'Inter', sans-serif;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    /* Centering Wrapper */
    .auth-wrapper {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    .auth-container {
        width: 100%;
        max-width: 420px;
    }

    /* --- CARD STYLES --- */
    .card-custom {
        background: white;
        border: none;
        border-radius: 24px;
        padding: 40px 30px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.08);
        text-align: center;
    }

    /* Icon Box (Green for Registration) */
    .icon-box {
        width: 60px; height: 60px;
        background: #f0fdf4; /* Light Green */
        color: #16a34a;      /* Green Icon */
        border-radius: 50%;
        display: flex; align-items: center; justify-content: center;
        font-size: 1.5rem;
        margin: 0 auto 20px;
        box-shadow: 0 4px 10px rgba(22, 163, 74, 0.2);
    }

    .title-text { font-weight: 800; color: #111827; margin-bottom: 8px; }
    .subtitle-text { color: #6b7280; font-size: 0.9rem; margin-bottom: 30px; }

    /* --- FORM INPUTS --- */
    .form-floating > .form-control {
        border-radius: 12px;
        border: 1px solid #e5e7eb;
        background-color: #f9fafb;
    }
    .form-floating > .form-control:focus {
        background-color: #fff;
        border-color: #16a34a; /* Focus Green */
        box-shadow: 0 0 0 4px rgba(22, 163, 74, 0.1);
    }
    .form-floating > label { color: #9ca3af; }

    /* --- BUTTONS --- */
    .btn-auth {
        background-color: #111827;
        color: white;
        border-radius: 12px;
        padding: 14px;
        font-weight: 600;
        font-size: 1rem;
        transition: 0.3s;
        border: none;
    }
    .btn-auth:hover {
        background-color: #000;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    /* Links */
    .link-text { color: #16a34a; font-weight: 600; text-decoration: none; }
    .link-text:hover { text-decoration: underline; color: #15803d; }
</style>

<div class="auth-wrapper">
    <div class="auth-container">

        <div class="card card-custom">

            <div class="icon-box">
                <i class="fa-solid fa-user-plus"></i>
            </div>

            <h3 class="title-text">Create Account</h3>
            <p class="subtitle-text">Join us to manage your cards efficiently</p>

            <form action="/register" method="POST">

                <div class="form-floating mb-3">
                    <input type="text" name="name" class="form-control" id="nameInput" placeholder="John Doe" required>
                    <label for="nameInput">Full Name</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="email" name="email" class="form-control" id="emailInput" placeholder="name@example.com" required>
                    <label for="emailInput">Email Address</label>
                </div>

                <div class="form-floating mb-4">
                    <input type="password" name="password" class="form-control" id="passwordInput" placeholder="Password" required>
                    <label for="passwordInput">Password</label>
                </div>

                <button type="submit" class="btn btn-auth w-100">Sign Up</button>
            </form>

            <div class="mt-4 text-muted small">
                Already have an account? <a href="/" class="link-text">Login</a>
            </div>

        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<%- include('footer') %>