<%- include('header') %>

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

<style>
    body {
        background-color: #f3f4f6;
        font-family: 'Inter', sans-serif;
        min-height: 100vh;
        /* --- FIX: Stack elements vertically --- */
        display: flex;
        flex-direction: column;
    }

    /* Wrapper to center the card in the space BELOW the header */
    .login-wrapper {
        flex: 1; /* Takes up all remaining height */
        display: flex;
        align-items: center; /* Vertically Center */
        justify-content: center; /* Horizontally Center */
        padding: 20px;
    }

    .login-container {
        width: 100%;
        max-width: 420px;
    }

    .card-custom {
        background: white;
        border: none;
        border-radius: 24px;
        padding: 40px 30px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.08);
    }

    /* Icon Box */
    .icon-box {
        width: 60px; height: 60px;
        background: #eef2ff;
        color: #4f46e5;
        border-radius: 50%;
        display: flex; align-items: center; justify-content: center;
        font-size: 1.5rem;
        margin: 0 auto 20px;
        box-shadow: 0 4px 10px rgba(79, 70, 229, 0.2);
    }

    .title-text { font-weight: 800; color: #111827; margin-bottom: 5px; }
    .subtitle-text { color: #6b7280; font-size: 0.9rem; margin-bottom: 30px; }

    /* Inputs */
    .form-floating > .form-control {
        border-radius: 12px;
        border: 1px solid #e5e7eb;
        background-color: #f9fafb;
    }
    .form-floating > .form-control:focus {
        background-color: #fff;
        border-color: #4f46e5;
        box-shadow: 0 0 0 4px rgba(79, 70, 229, 0.1);
    }
    .form-floating > label { color: #9ca3af; }

    /* Button */
    .btn-login {
        background-color: #111827;
        color: white;
        border-radius: 12px;
        padding: 14px;
        font-weight: 600;
        font-size: 1rem;
        transition: 0.3s;
        border: none;
    }
    .btn-login:hover {
        background-color: #000;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    /* Links */
    .link-text { color: #4f46e5; font-weight: 600; text-decoration: none; }
    .link-text:hover { text-decoration: underline; }

    .forgot-link { color: #6b7280; font-size: 0.85rem; text-decoration: none; transition: 0.2s; }
    .forgot-link:hover { color: #111; }
</style>

<div class="login-wrapper">
    <div class="login-container">

        <div class="card card-custom text-center">

            <div class="icon-box">
                <i class="fa-solid fa-lock"></i>
            </div>

            <h3 class="title-text">Welcome Back</h3>
            <p class="subtitle-text">Please sign in to your CardGuard account</p>

            <form action="/login" method="POST">

                <div class="form-floating mb-3">
                    <input type="email" name="email" class="form-control" id="emailInput" placeholder="name@example.com" required>
                    <label for="emailInput">Email Address</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="password" name="password" class="form-control" id="passwordInput" placeholder="Enter Password" required>
                    <label for="passwordInput">Password</label>
                </div>

                <div class="text-end mb-4">
                    <a href="/forgot-password" class="forgot-link">Forgot Password?</a>
                </div>

                <button type="submit" class="btn btn-login w-100">Log In</button>
            </form>

            <div class="mt-4 text-muted small">
                Don't have an account? <a href="/register" class="link-text">Create Account</a>
            </div>

        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<%- include('footer') %>